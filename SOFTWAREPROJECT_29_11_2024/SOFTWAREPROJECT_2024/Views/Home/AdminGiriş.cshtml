@{
    ViewData["Title"] = "ADMIN";
}
@{
    Layout=null;
}
@model SOFTWAREPROJECT_2024.Models.Member

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="YUNUS EMRE KARATAŞ">
  
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--CSS-->
    <link rel="stylesheet" href="~/css/AdminGiriş.css"> <!-- Razor'da '~' kullanılabilir -->
    <link rel="stylesheet" href="~/css/index.css">  <!-- Razor'da '~' kullanılabilir -->
    
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <title>@ViewData["Title"]</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/media/Adsız tasarım.png" alt="LOGO" width="150px" height="100px">
            </a>
            <a class="navbar-brand" id="bookworld" asp-controller="Home" asp-action="Index">BookWorld</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span><i class="fa-solid fa-gear"></i></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="dropli"><a class="dropdown-item" href="#"><img src="~/media/world.png" alt="turkishFlag" width="10px" height="10px"></a></li>
                            <li class="dropli"><a class="dropdown-item" href="#"><img src="~/media/united-kingdom.png" alt="englishFlag" width="10px" height="10px"></a></li>
                            <li class="dropli"><a class="dropdown-item" href="#"><img src="~/media/france.png" alt="frenchFlag" width="10px" height="10px"></a></li>
                            <li class="dropli"><a class="dropdown-item" href="#"><img src="~/media/germany.png" alt="germanyFlag" width="10px" height="10px"></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Form section starting -->
    <div class="container" id="information">

        
             <div class="col-sm-4 col-md-6 col-lg-9 col-xl-12">
                           
                 @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger" id="errorAlert" role="alert">
                        @TempData["Error"]
                    </div>
                    <script>
                        setTimeout(function(){
                            var result = document.getElementById('errorAlert');
                            if(result){
                                result.style.display = "none";
                            }
                        }, 2000);
                    </script>
                }

             </div>


        <!-- Burada action demek bu methoda git demek post ile kontrol et -->
        <form method="post" asp-controller="Home" asp-action="AdminSıgnIn"> <!-- action="Home/SignIn" şeklinde belirtmek daha uygun olur -->
            <div class="container form-container">
                <h2 style="text-align: center; font-family: Arial, Helvetica, sans-serif; font-size: 24px;">ADMIN PANEL</h2>
                <div class="row">
                    <div class="col-sm-6">
                        <label for="Name">ADMIN:</label>
                        <input type="text" name="Name" id="Name" placeholder="Please enter the username." required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label for="AdminPassword">PASSWORD:</label>
                        <input type="password" name="AdminPassword" id="AdminPassword" placeholder="Please enter the AdminPassword." required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-success" id="signin">Sign In</button>
                    </div>
                </div>
            </div>
        </form>


       
    </div>
    <!-- Form section ending -->

    <!-- Footer Starting -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <p>&copy; 2024 BookWorld. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Ending -->

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <!-- Popper.js ve Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  </body>
</html>

